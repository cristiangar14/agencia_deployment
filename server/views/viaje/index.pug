extends ../layout/index
block contenido
    main.container.mt-5
        .row
            .col-md-5
                img(src=`/img/destinos_${viaje.imagen}_ln.jpg`, alt="Imagen_Lugar", class="img-fluid")
            .col-md-7
                h1 #{viaje.titulo}
                p
                    i(class="fas fa-calendar-alt")
                    |  Fecha ida:  #{viaje.fecha_ida} - Fecha vuelta: #{viaje.fecha_vuelta}
                p
                    i.fas.fa-dollar-sign
                    |  #{viaje.precio} COP
                p
                    i.fas.fa-users
                    |  #{viaje.disponibles} Disponibles
                p= viaje.descripcion
